
<project name="Ant-Test" default="main" basedir=".">
	<!-- Sets variables which can later be used. -->
	<!-- The value of a property is accessed via ${} -->
	<property name="src.dir" location="src" />
	<property name="build.dir" location="bin" />
	<property name="dist.dir" location="dist" />
	<property name="docs.dir" location="javadoc" />

	<!-- Deletes the existing build, docs and dist directory-->
	<target name="clean">
		<delete dir="${docs.dir}" />
		<delete dir="${dist.dir}" />
	</target>

	<!-- Creates the  build, docs and dist directory-->
	<target name="makedir">
		<mkdir dir="${docs.dir}" />
		<mkdir dir="${dist.dir}" />
	</target>

	<!--Creates the deployable jar file  -->
	<target name="jatcore.jar" depends="clean,makedir">
		<jar destfile="${dist.dir}\jatcore.jar" basedir="${build.dir}" excludes="**/application/,**/examples/,**/simulation/,**/tests/,**/unittest/"  >
			<manifest>
				<attribute name="Main-Class" value="test.Main" />
			</manifest>
		</jar>
	</target>

	<!--Creates the deployable jar file  -->
	<target name="jatapplication.jar" depends="clean,makedir">
		<jar destfile="${dist.dir}\jatapplication.jar" basedir="${build.dir}" excludes="**/core/,**/examples/,**/simulation/,**/tests/,**/unittest/"  >
			<manifest>
				<attribute name="Main-Class" value="test.Main" />
			</manifest>
		</jar>
	</target>

	<!--Creates the deployable jar file  -->
	<target name="jatexamples.jar" depends="clean,makedir">
		<jar destfile="${dist.dir}\jatexamples.jar" basedir="${build.dir}" excludes="**/application/,**/core/,**/simulation/,**/tests/,**/unittest/"  >
			<manifest>
				<attribute name="Main-Class" value="test.Main" />
			</manifest>
		</jar>
	</target>

	

			
			
	<target name="main" depends="jatcore.jar, jatapplication.jar, jatexamples.jar">
		<description>Main target</description>
	</target>

</project>
